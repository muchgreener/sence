<div class="hero-unit">
  <h1>sence?dashboard</h1>
  <p>
  	
    <%= link_to "<i class='icon-question-sign icon-white'></i> #{t('New Question')}".html_safe, new_question_path, :class=>'btn btn-large btn-primary' %>
    <%= link_to "<i class='icon-random icon-white'></i> #{t('Random Question')}".html_safe, random_questions_path, :class=>'btn btn-large btn-success' %>
    <%= link_to "<i class='icon-star icon-white'></i> #{t('My Questions')}".html_safe, mine_questions_path, :class=>'btn btn-large btn-warning' %>
    <%= link_to "<i class='icon-star icon-white'></i> #{t('No Picture')}".html_safe, nopicture_questions_path, :class=>'btn btn-large btn-warning' %>
    <%= link_to "<i class='icon-user icon-white'></i> #{t('Users')}".html_safe, users_path, :class=>'btn btn-large btn-info' %>
    <%= link_to "sign out", destroy_user_session_path, :method => :delete, :class=>'btn btn-large' %>
  </p>

  <b><%= @question_count %></b> questions,
  <b><%= @answer_count %></b> answers and 
  <b><%= @user_count %></b> users
</div>
 <table class="table table-condensed">
  <tr>
    <th>User</th>
    <th>Question Count</th>
  </tr>
  	<% @user_questions.each do |user_question| %>
	  <tr>
	    <td><%= link_to user_question.email, user_questions_path(user_question.user_id) %></td>
	    <td><%= link_to user_question.cnt, user_questions_path(user_question.user_id) %></td>
	  </tr>
	<% end %>
</table>
