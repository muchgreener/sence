<h1>Listing answers</h1>

<table class="table">
  <tr>
    <th></th>
    <th>User</th>
    <th>Answer Count</th>
    <th>Last Answer Date</th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= link_to "<i class='icon-share icon-black'></i>".html_safe, user_answers_path(answer.user_id), :title=> "Show" %></td>
    <td><%= answer.email %></td>
    <td><%= answer.answer_count %></td>
    <td><%= answer.last_answer_date %></td>
  </tr>
<% end %>
</table>

